<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoAction" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="ProfileActivityTheme" parent="AppTheme">
        <item name="colorPrimary">@color/profileActivity</item>
        <item name="colorPrimaryDark">@color/profileActivityDark</item>
        <item name="android:navigationBarColor">@color/profileActivity</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashScreen" parent="AppThemeNoAction">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonSend">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:layout_marginBottom">105dp</item>
        <item name="srcCompat">@drawable/ic_arrow_upward</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">20dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

</resources>
